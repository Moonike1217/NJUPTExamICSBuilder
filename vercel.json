{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/search-by-class-id",
      "dest": "/api/search-by-class-id.js"
    },
    {
      "src": "/api/generate-ics",
      "dest": "/api/generate-ics.js"
    },
    {
      "src": "/api",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "TZ": "Asia/Shanghai"
  }
} 