/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
}

.card {
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.btn-primary {
  background-color: #1976d2;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.btn-primary:active {
  background-color: #1565c0;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 32rpx;
  background: white;
}

.input-field:focus {
  border-color: #1976d2;
}

.text-center {
  text-align: center;
}

.text-muted {
  color: #999;
  font-size: 24rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
}

.error-message {
  color: #f44336;
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx;
  background: #ffebee;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.success-message {
  color: #4caf50;
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx;
  background: #e8f5e8;
  border-radius: 8rpx;
  margin: 20rpx 0;
} 