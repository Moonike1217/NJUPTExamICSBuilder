.class-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976d2;
  flex: 1;
  margin: 0 20rpx;
}

.btn-small {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.upload-area {
  border: 4rpx dashed #ddd;
  border-radius: 12rpx;
  padding: 60rpx 20rpx;
  text-align: center;
  background: #fafafa;
  margin: 20rpx 0;
}

.upload-area:active {
  background: #f0f0f0;
  border-color: #1976d2;
}

.upload-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

.file-info {
  margin-top: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.file-item {
  display: flex;
  align-items: center;
}

.file-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.file-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.file-size {
  font-size: 24rpx;
  color: #999;
}

.file-status {
  font-size: 24rpx;
  color: #4caf50;
  font-weight: bold;
}

.action-buttons {
  margin: 40rpx 0;
}

.upload-progress {
  margin: 20rpx 0;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: #1976d2;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  display: block;
}

.requirements {
  margin-top: 20rpx;
}

.requirement-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.requirement-icon {
  width: 30rpx;
  height: 30rpx;
  background: #4caf50;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.requirement-text {
  font-size: 28rpx;
  color: #333;
}

.btn-primary[disabled] {
  background-color: #ccc !important;
  color: #999 !important;
} 