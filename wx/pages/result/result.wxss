.result-header {
  text-align: center;
}

.result-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1976d2;
  margin-bottom: 15rpx;
}

.result-info {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.info-item {
  font-size: 28rpx;
  color: #666;
  background: #f8f9fa;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.exam-list {
  margin: 20rpx 0;
}

.exam-card {
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #1976d2;
}

.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.exam-status {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.exam-status.normal {
  background: #e8f5e8;
  color: #4caf50;
}

.exam-status.urgent {
  background: #ffebee;
  color: #f44336;
}

.exam-status.warning {
  background: #fff3e0;
  color: #ff9800;
}

.exam-details {
  margin-top: 20rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.detail-icon {
  width: 40rpx;
  font-size: 32rpx;
  margin-right: 15rpx;
  text-align: center;
}

.detail-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
  display: block;
  margin-bottom: 40rpx;
}

.action-buttons {
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tips {
  margin-top: 20rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.tip-icon {
  width: 40rpx;
  font-size: 32rpx;
  margin-right: 15rpx;
  text-align: center;
  flex-shrink: 0;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
} 