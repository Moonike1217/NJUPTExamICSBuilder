.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.result {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.header {
  margin-bottom: 30rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.exam-list {
  margin-bottom: 30rpx;
}

.exam-item {
  display: flex;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.exam-checkbox {
  padding-right: 20rpx;
  display: flex;
  align-items: center;
}

.exam-content {
  flex: 1;
}

.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #eee;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.student-count {
  font-size: 24rpx;
  color: #666;
  background: #e8e8e8;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.exam-detail {
  font-size: 28rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 12rpx;
  line-height: 1.6;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  width: 100rpx;
  flex-shrink: 0;
}

.no-data {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.footer {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1px solid #eee;
}

.generate-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
} 