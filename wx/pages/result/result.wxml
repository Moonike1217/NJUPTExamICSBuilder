<view class="container">
  <view class="result">
    <view class="header">
      <text class="title">考试安排</text>
      <text class="subtitle">（按考试人数排序）</text>
    </view>
    
    <view class="exam-list" wx:if="{{examData && examData.length}}">
      <view class="exam-item" wx:for="{{examData}}" wx:key="index">
        <view class="exam-checkbox">
          <checkbox checked="{{selectedExams[index]}}" bindtap="onExamSelect" data-index="{{index}}" />
        </view>
        <view class="exam-content">
          <view class="exam-header">
            <text class="course-name">{{item.courseName}}</text>
            <text class="student-count">{{item.studentCount}}人</text>
          </view>
          <view class="exam-detail">
            <view class="detail-item">
              <text class="label">时间：</text>
              <text>{{item.date}} {{item.startTime}}-{{item.endTime}}</text>
            </view>
            <view class="detail-item">
              <text class="label">地点：</text>
              <text>{{item.location}}</text>
            </view>
            <view class="detail-item">
              <text class="label">教师：</text>
              <text>{{item.teacher}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    
    <view class="no-data" wx:else>
      <text>暂无考试数据</text>
    </view>

    <view class="footer" wx:if="{{examData && examData.length}}">
      <button class="generate-btn" type="primary" bindtap="generateICS">
        生成日历文件
      </button>
    </view>
  </view>
</view> 