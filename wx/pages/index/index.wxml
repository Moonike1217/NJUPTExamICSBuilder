<view class="container">
  <view class="form">
    <input 
      class="input" 
      type="text" 
      maxlength="7" 
      placeholder="请输入7位行政班号" 
      value="{{classId}}"
      bindinput="onInput"
    />
    <button 
      class="submit-btn" 
      type="primary" 
      loading="{{isLoading}}" 
      bindtap="onSubmit"
    >
      查询考试安排
    </button>
  </view>
</view> 