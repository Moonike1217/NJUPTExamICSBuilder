.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
}

.form {
  width: 100%;
  max-width: 600rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  margin-bottom: 32rpx;
  font-size: 32rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
} 